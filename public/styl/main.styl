@import 'https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700'

$white = #fafafa
$offWhite = #fefbf7

// Reds
$red1 = #EE5A3B
$red2 = #FFA08C
$red3 = #FF7D62
$red4 = #D33514
$red5 = #A62206

// Blues
$blue1 = #2A7895
$blue2 = #6FADC5
$blue3 = #448BA5
$blue4 = #126584
$blue5 = #084D68

// Greens
$green1 = #C2F184
$green2 = #ABEA5A
$green3 = #92D936
$green4 = #75C013
$green5 = #589706

$content-width = 1400px


*
	font-family 'Open Sans'
	outline none
	box-sizing border-box
	
html, body
	width 100%
	height 100%
	font-size 12px

html, body, h1, h2, h3, p, ul, form, button
	margin 0px
	padding 0px

body
	position relative
ul
	list-style-type none

a
	cursor pointer

h1
	font-size 2.5em

h2
	font-size 1.3em
	@media $screen-lg
		font-size 1.7em

h3
	font-size 1em
	@media $screen-lg
		font-size 1.3em

p, li, a
	font-size .6em
	@media $screen-lg
		font-size 1em

svg
	path
		fill $white

.fade-in-content
	animation fade-in .6s ease-out

@keyframes fade-in
	from
		opacity 0
	to
		opacity 1


.site-wrapper
	background $white
	position relative

.site-wrapper::selection
	background-color $red4
	
.header-container, 
.about-container,
.work-container,
.contact-container
	display flex
	flex-flow column nowrap
	width 100%
	height 100vh
	color $white
	font-size 1.5rem
	overflow hidden
	position relative
	
.header-container
	background-color $blue4

.work-container
	background-color $offWhite
	color $blue4
	height 200vh

.contact-container
	background-color $green1
	color $white

.header-top
	display flex
	justify-content center
	flex-flow column nowrap
	align-items center
	width 100%
	height 33.3%

.header-bottom
	height 66.6%
	width 100%
