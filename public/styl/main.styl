$navy = #10293F
$orange = #DE4406
$gray = #C4CED4
$white = #fafafa

html, body
	width 100%
	height 100%
	margin 0px
	padding 0px
	
ul
	list-style-type none

a
	cursor pointer
	
.header-container, 
.about-container,
.work-container,
.contact-container
	display flex
	flex-flow column nowrap
	width 100%
	height 100%
	color $white
	
.header-container
	background-color $navy
	
.about-container
	background-color $oran

.work-container
	background-color $gray

.contact-container
	background-color $white
	color $navy

.header-top
	display flex
	width 100%
	height 50%

.header-top
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	
.header-bottom
	display flex
	flex-flow column nowrap
	justify-content flex-end
	width 100%
	height 50%

.nav-list
	display flex
	flex-flow row nowrap
	justify-content space-around
