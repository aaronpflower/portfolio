$navy = #10293F
$orange = #DE4406
$gray = #C4CED4
$white = #fafafa

html, body
	width 100%
	height 100%
	margin 0px
	padding 0px
	font-size 17px
	
ul
	list-style-type none

a
	cursor pointer

h1
	font-size 3em

h2 
	font-size 2.5em

h3
	font-size 2em

p, a
	font-size 1.5em
	
.header-container, 
.about-container,
.work-container,
.contact-container
	display flex
	flex-flow column nowrap
	width 100%
	height 100%
	color $white
	font-size 1.5rem
	
.header-container
	background-color $white
	color $navy
	border-bottom 4px solid $navy
	height 99.7%
	
.about-container
	background-color $gray

.work-container
	background-color $orange

.contact-container
	background-color $navy
	
.header-top
	display flex
	width 100%
	height 50%

.header-top
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	
.header-bottom
	display flex
	flex-flow column nowrap
	justify-content flex-end
	width 100%
	height 50%

.nav-list
	display flex
	flex-flow row nowrap
	justify-content space-around
