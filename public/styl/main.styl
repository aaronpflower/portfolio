@import 'https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700'

$navy = #0d3a59
$beige = #fff7ec
$cream = #fff6eb
$brown = #e5d5be
$grey = #cfd8df
$ltGreen = #b6e293
$green = #b6e293
$yellowGreen = #c3ca6b
$yellow = #feeb75
$salmon = #f8928e
$red = #f0576b
$ltBlue = #f7fdff
$blue = #0899b4
$white = #fafafa

*
	font-family 'Open Sans'
	outline none
	box-sizing border-box
	
html, body
	width 100%
	height 100%
	font-size 12px

html, body, h1, h2, h3, p, ul, form, button
	margin 0px
	padding 0px

body
	position relative
ul
	list-style-type none

a
	cursor pointer

h1
	font-size 2.5em

h2 
	font-size 2em

h3
	font-size 1.5em

p, a
	font-size 1.2em

svg
	path
		fill $white

.fade-in-content
	animation fade-in .6s ease-out

@keyframes fade-in
	from
		opacity 0
	to
		opacity 1

.site-wrapper
	background linear-gradient($blue, $ltBlue)


.header-container, 
.about-container,
.work-container,
.contact-container
	display flex
	flex-flow column nowrap
	width 100%
	height 100%
	color $white
	font-size 1.5rem

.section-title
	margin 25px
	text-align center
	
.header-container
	color $white
	height 100%
	position relative
.about-container
	color $white

.work-container
	color $navy

.contact-container
	color $navy

.header-top,
.header-middle,
.header-bottom
	display flex
	justify-content center
	flex-flow column nowrap
	align-items center
	width 100%
	height 33.3%
	
.header-bottom
	flex-flow row nowrap
	justify-content space-around
	align-items flex-end
	position relative
	
.boulder-svg
	position absolute
	top -80%
	bottom 0
	left 0
	right 0
	margin auto 
	width 75%
	z-index 1
	
.current-weather-mount
	width 100%
	height 90%

.nav
	position absolute
	bottom 0px
	width 100%
	animation fade-in 2s ease-out
	

.nav-scroll
	position fixed
	top 0px
	bottom auto
	animation fade-in 2s ease-out
	color $navy
	
.nav-list
	z-index 1
	width 100%
	display flex
	flex-flow row nowrap
	justify-content space-around
