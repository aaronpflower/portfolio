.active-widget
	display flex
	flex-flow column nowrap
	width 100%
	height 60%
	box-shadow 0 0 53px 0 rgba(0,0,0,.25)
	@media $screen-lg
		max-height 550px
		height 65%
		width 85%

.about-active
	display flex
	height 80%
	width 100%
	
.active-copy
	display flex
	flex-flow column nowrap
	padding 15px
	@media $screen-xs
		border-right 2px solid $darkBlue
		width 66.6%

.active-img
	display none
	@media $screen-xs
		display block
		width 33.3%
		height 100%
		img
			height 100%
			width 100%

.about-inactive
	display flex
	height 20%
	width 100%
	
.about-wrapper
	width 50%
	height 100%
	color $darkBlue

.season-date
	display flex
	justify-content center
	align-items center
	height 100%
	width 100%

.inactive-item
	display flex
	justify-content center
	align-items center
	width 100%
	height 100%
	background-color $darkBlue
	color $white
	border-right 1px solid $offWhite
	h3
		text-align center
		