.work-mount,
.work-component-wrapper
	max-width 1400px
	max-height 500px
	margin 0px auto
	width 100%
	height 100%
	overflow hidden
	box-shadow 0 0 53px 0 rgba(0,0,0,.25)
	
.next-slide
	display flex
	justify-content flex-end
	position absolute
	top 28.8%
	width 100px
	height 50px
	z-index 100
	background transparent

.next-slide.right
	right 0px

.next-slide.left
	left 0px

.slide-container
	display flex
	flex-flow row nowrap
	justify-content center
	align-items flex-start
	height 100%
	width 300%
	overflow hidden

.slide-wrapper
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	width 33.33%
	height 100%
	@media $screen-xs
		flex-flow row nowrap

.slide-left
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	width 100%
	height 33.3%
	background $greenBlue
	color $white
	@media $screen-xs
		width 50%
		height 100%
		
.slide-right
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	width 100%
	height 66.6%
	background-color $white
	color $gray
	border-top 4px solid $red
	@media $screen-xs
		width 50%
		height 100%
	
.slide-wrapper h3
	width 66.66%
	text-align center

.slide-wrapper p
	width 66.66%
	text-align left

@keyframes right-one-third
	0%
		transform translateX(0%)
	100%
		transform translateX(-33.33%)

@keyframes right-two-thirds
	0%
		transform translateX(-33.33%)
	100%
		transform translateX(-66.66%)

@keyframes right-three-thirds
	0%
		transform translateX(-66.66%)
	100%
		transform translateX(0%)

.right-one-third
	animation right-one-third .5s ease-out
	transform translateX(-33.33%)
	
.right-two-thirds
	animation right-two-thirds .5s ease-out
	transform translateX(-66.66%)

.right-three-thirds
	animation right-three-thirds .5s ease-out
	transform translateX(0%)