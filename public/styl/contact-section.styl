.form-mount
	width 100%
	height 55%

.contact-component
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	height 100%
	width 100%
	max-width $content-width
	margin auto
form	
	display flex
	flex-flow column nowrap
	justify-content space-around
	align-items center
	width 100%
	height 90%

.form-input
	width 50%
	height 40px
	max-width 250px
	background-color transparent
	border none
	border-bottom 1px solid $white
	text-align center
	color $white
	margin 15px 0px
	
.form-input::placeholder,
.form-textarea::placeholder
	text-align center
	height 100%
	color $white
	font-size 1.5em

.form-input::value,
.form-textarea::value
	font-size 1.5em
	
.form-textarea
	width 80%
	height 120px
	max-width 300px
	background-color transparent
	border none
	border-bottom 1px solid $white
	color $white
	
.form-button
	width 75%
	height 65px
	margin-top 25px
	max-width 250px
	background-color $offWhite
	color $blueGray
	outline none
	border 1px solid $blueGray
	transition all .3s ease-in
	font-size 1.3em

.form-button:hover
	background-color $blueGray
	color $offWhite
	transition all .3s ease-out
	

.copywrite
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	width 100%
	height 10%

.name-container
	width 100%
	height 50%
	display flex
	justify-content center
	align-items flex-end
	p
		font-size .5em
	

.icons-container
	display flex
	justify-content center
	align-content center
	width 100%
	height 50%
	// z-index 102

.icon-item
	display flex
	justify-content center
	width 50px
	img
		transform scale(1)
		transition all .2s ease-in
		height 100%
		width 100%

.icon-item img:hover
	transform scale(1.5)
	transition all .2s ease-out