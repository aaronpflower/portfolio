.contact-top,
.contact-bottom
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	width 100%

.contact-top
	height 66.6%

.contact-bottom
	height 33.3%
	
.form-container
	width 100%
	height 50%

form	
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	width 100%
	height 100%
	.form-input-wrapper
		display flex
		flex-flow column nowrap
		justify-content space-around
		align-items center
		width 100%
		height 100%

	.form-input
		width 50%
		height 45px
		
	.form-button
		width 50%
		height 45px
		background-color $white

.icons-container
	display flex
	justify-content center
	align-content center
	width 100%
	height 50%

.icon-item
	display flex
	justify-content center
	width 50%
	svg
		height 50px
		width 50px
		path
			fill $white