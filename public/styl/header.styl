@keyframes nav-animation-reset
	0%
		transform translate(0%, 0%)
		opacity 1
		background-color $blue4
	1%
		opacity 0
	50%
		transform translate(0%, 85%)
		opacity 0
	75%
		transform translate(0%, 85%)
	95%
		opacity .5
		transform translate(0%, 85%)
		background-color $blue4
	100%
		transform translate(0%, 85%)
		opacity 1
		background-color $white
		
@keyframes nav-animation-go
	0%
		transform translate(0%, 85%)
		opacity 1
	50%
		transform translate(0%, 85%)
		opacity 0
	100%
		transform translate(0%, 0%)
		opacity 1

@keyframes whoami-scroll
	0%
		transform translate(0%, 15%)
		opacity 0
	50%
		transform translate(-0%, 15%)
		opacity 0
	100%
		transform translate(-0%, 0%)
		opacity 1

@keyframes conditions-scroll
	0%
		transform translate(0%, 40%)
		opacity 0
	50%
		transform translate(0%, 40%)
		opacity 0
	100%
		transform translate(0%, 0%)
		opacity 1

@keyframes header-top-scroll
	0%
		background transparent
	95%
		background transparent
	100%
		background $white

@keyframes current-icon-pulse
	0% 
		transform scale(1)
		
	100%
		transform scale(1.2)
		
@keyframes me-scroll
	0%
		transform scale(1)
		opacity 1
	5%
		opacity 0
		transform scale(1)
	85%
		opacity 0
		transform scale(.1)
	100%
		opacity 1
		transform scale(.4)
	
@keyframes nav-item-wrapper-scroll
	0%
		opacity 1
		background none
		top auto
	5%
		opacity 0
		top auto
		background none
	75%
		top 16vh
		opacity 0
		background none
	100%
		top 9vh
		opacity 1
		background $ltGreen
		
.header-top
	height 100vh
	width 100%
	position fixed
	background transparent
	transition height .2s ease-in
	
.header-top-scroll
	height 9vh
	background $white
	animation header-top-scroll .5s ease-out
	transition none
	z-index 100

.whoami
	display flex
	flex-flow column nowrap
	justify-content flex-start
	align-items center
	height 100%
	width 100%
	position absolute
	top 0px
	bottom 0px
	right 0px
	left 0px
	margin auto
	text-align center
	transition all .5s ease-in
	transform scale(1) translate(0%, 15%)
	color $white
	letter-spacing 1px
	
.whoami-scroll
	justify-content center
	align-items flex-start
	height 9vh
	margin 0
	left 2%
	color $gray
	position fixed
	text-align left
	animation whoami-scroll .5s ease-out
	transform translate(0%, 0%)
	transition none
	h2, h3
		font-size .5em
	@media $screen-lg
		h2, h3
			font-size 1em

.conditions
	display flex
	flex-flow column nowrap
	justify-content flex-start
	align-items center
	height 100%
	width 100%
	position absolute
	top 0px
	bottom 0px
	right 0px
	left 0px
	margin auto
	text-align center
	transition all .5s ease-in
	transform scale(1) translate(0%, 40%)
	color $white
	letter-spacing 1px
	
.conditions-scroll
	justify-content center
	align-items flex-end
	transform translate(0%, 0%)
	animation conditions-scroll .5s ease-out
	height 9vh
	margin 0
	left -2%
	color $gray
	position fixed
	text-align right
	transition none
	p
		font-size .5em
	@media $screen-lg
		p
			font-size 1em

.header-bottom
	display flex
	flex-flow column nowrap
	justify-content flex-end
	align-items center
	text-align center
	width 100%
	height 100%

.current-icon
	position relative
	top 15%
	width 11%
	height 20%

.current-icon svg
	width 100%
	height 100%
	animation current-icon-pulse 2.5s ease-out infinite alternate
	
.boulder-svg
	display flex
	height 35%
	width 100%
	
.boulder-svg svg
	width 100%
	height 100%
	
.nav-item-wrapper
	display flex
	justify-content flex-start
	width 100%
	height 15%
	color $white

.nav-item-wrapper-scroll
	transform translate(0%, 0%)
	position fixed
	top 9vh
	background $ltGreen
	z-index 100
	height initial
	animation nav-item-wrapper-scroll .7s ease-out
	box-shadow 0px 10px 10px 0px rgba(0,0,0,.25)
	
.about-li,
.work-li,
.contact-li
	z-index 1
	width 33.3%
	text-align center
	a
		letter-spacing 2px
	
.me-img-wrapper
	display flex
	justify-content center
	align-items center
	position absolute
	top 100%
	right 0px
	left 0px
	bottom 0px
	width 100%

.me-img-wrapper-scroll
	position fixed
	height 9vh
	top 0px
	bottom auto
	transform scale(.4)
	z-index 101
	animation me-scroll .5s ease-out
	opacity 1
	
.me-img
	width 150px
	max-width 265px
	border-top 4px solid $ltGreen
	border-left 4px solid $ltGreen
	border-bottom 4px solid $ltGreen
	border-right 4px solid $ltGreen
	border-radius 50%
	z-index 101
	transition opacity scale .5s ease-in


	
