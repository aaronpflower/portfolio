@keyframes nav-animation
	0%
		transform translate(0%, 97%)
	100%
		transform translate(0%, 0%)
		flex-flow column nowrap

@keyframes nav-animation-2
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 97%)


@keyframes about-li
	0%
		transform translate(0%, 0%)
		width 100%
	100%
		transform translate(0%, 5%)
		width 10%

@keyframes work-li
	0%
		transform translate(0%, 0%)
		width 100%
	100%
		transform translate(0%, 10%)
		width 10%
		
		
@keyframes contact-li
	0%
		transform translate(0%, 0%)
		width 100%
	100%
		transform translate(0%, 15%)
		width 10%

@keyframes about-li-2
	0%
		transform translate(0%, 5%)
		width 10%
	100%
		transform translate(0%, 0%)
		width 100%

@keyframes work-li-2
	0%
		transform translate(0%, 10%)
		width 10%
	100%
		transform translate(0%, 0%)
		width 100%

@keyframes contact-li-2
	0%
		transform translate(0%, 15%)
		width 10%
	100%
		transform translate(0%, 0%)
		width 100%
		
.nav-wrapper
	height 100vh
	width 100vw
	position fixed
	background transparent
	z-index 100

.nav
	display flex
	margin auto
	z-index 1
	height 100%
	width 100%
	animation nav-animation-2 .5s ease-out
	position relative
	transform translate(0%, 97%)
	color $white
	
.nav-scroll
	animation nav-animation .5s ease-out
	color $white
	transform translate(0%, 0%)
	flex-flow column nowrap

.about-li,
.work-li,
.contact-li
	transform translate(0%, 0%)
	text-align center
	
.about-li
	animation about-li-2 .5s ease-out
	width 33.3%

.work-li
	animation work-li-2 .5s ease-out
	width 33.3%

.contact-li
	animation contact-li-2 .5s ease-out
	width 33.3%

.about-li-animate
	animation about-li .5s ease-out
	transform translate(0%, 5%)
	width 10%
.work-li-animate
	animation work-li .5s ease-out
	transform translate(0%, 10%)
	width 10%
.contact-li-animate
	animation contact-li .5s ease-out
	transform translate(0%, 15%)
	width 10%
