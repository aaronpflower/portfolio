@keyframes nav-animation-reset
	0%
		transform translate(-50%, 0%)
		opacity 1
	1%
		opacity 0
	50%
		transform translate(-25%, 95%)
		opacity 0
	75%
		transform translate(-5%, 95%)
	95%
		opacity .5
		transform translate(0%, 95%)
	100%
		transform translate(0%, 95%)
		opacity 1
		
@keyframes nav-animation-go
	0%
		transform translate(0%, 95%)
		opacity 1
	50%
		transform translate(-50%, 95%)
		opacity 0
	100%
		transform translate(-50%, 0%)
		opacity 1
		
@keyframes about-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 5%)

@keyframes work-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 100%)
		
@keyframes contact-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 200%)
		
.nav-wrapper
	height 100vh
	width 100vw
	position fixed
	background transparent
	z-index 100

.nav-item-container
	position relative
	display inline-block
	z-index 1
	height 100%
	width 100%
	
.nav-item-wrapper
	display flex
	position relative
	z-index 1
	width 50%
	height 100%
	margin auto
	animation nav-animation-reset .5s ease-out
	transform translate(0%, 95%)
	color $white
	
.nav-scroll
	animation nav-animation-go .5s ease-out
	transform translate(-50%, 0%)

.about-li,
.work-li,
.contact-li
	transform translate(0%, 0%)
	flex 1 1 auto
	text-align center

.about-li,
.work-li,
.contact-li
	a
		letter-spacing 2px
	
.about-li
	position static

.work-li
	position static

.contact-li
	position static

.about-li-animate
	animation about-li-go .5s ease-out
	transform translate(0%, 5%)
	position absolute
	
.work-li-animate
	animation work-li-go .5s ease-out
	transform translate(0%, 100%)
	position absolute
	
.contact-li-animate
	animation contact-li-go .5s ease-out
	transform translate(0%, 200%)
	position absolute
