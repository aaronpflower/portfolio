@keyframes nav-animation-reset
	0%
		transform translate(0%, 0%)
		opacity 1
		background-color $blue4
	1%
		opacity 0
	50%
		transform translate(0%, 85%)
		opacity 0
	75%
		transform translate(0%, 85%)
	95%
		opacity .5
		transform translate(0%, 85%)
		background-color $blue4
	100%
		transform translate(0%, 85%)
		opacity 1
		background-color $white
		
@keyframes nav-animation-go
	0%
		transform translate(0%, 85%)
		opacity 1
	50%
		transform translate(0%, 85%)
		opacity 0
	100%
		transform translate(0%, 0%)
		opacity 1

@keyframes about-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 5%)

@keyframes work-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 100%)
		
@keyframes contact-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 200%)

@keyframes whoami-scroll
	0%
		transform scale(1) translate(0%, 0%)
	// 50%
	// 	transform scale(.8) translate(0%, -20%)
	100%
		transform scale(.5) translate(0%, -49%)

@keyframes conditions-scroll
	0%
		transform scale(1) translate(0%, 0%)
	50%
		transform scale(.8) translate(0%, 0%)
	75%
		transform scale(.8) translate(0%, -15%)
	90%
		transform scale(.8) translate(20%, -30%)
	100%
		transform scale(.8) translate(20%, -30%)

@keyframes nav-wrapper-scroll
	0%
		background transparent
	95%
		background transparent
	100%
		background $white
		
.nav-wrapper
	height 100vh
	width 100vw
	position fixed
	background transparent
	transition background-color .5s ease-in
	z-index 100

.nav-wrapper-scroll
	height 10vh
	background $white
	animation nav-wrapper-scroll .5s ease-out

.nav-item-container
	display inline-block
	position relative
	height 100%
	width 100%
	
.nav-item-wrapper
	display flex
	position relative
	width 100%
	height 100%
	margin auto
	animation nav-animation-reset .5s ease-in
	transform translate(0%, 85%)
	color $white
	@media $screen-lg
		transform translate(0%, 95%)
		width 50%
	
.nav-item-wrapper-scroll
	animation nav-animation-go .5s ease-out
	transform translate(0%, 0%)
	color $blue4
	@media $screen-lg
		transform translate(-50%, 0%)
	a
		font-size .8em

.about-li,
.work-li,
.contact-li
	transform translate(0%, 0%)
	flex 1 1 auto
	text-align center

.about-li,
.work-li,
.contact-li
	a
		letter-spacing 2px
	
.about-li
	position static

.work-li
	position static

.contact-li
	position static

.about-li-animate
	animation about-li-go .5s ease-out
	transform translate(0%, 5%)
	position absolute
	
.work-li-animate
	animation work-li-go .5s ease-out
	transform translate(0%, 100%)
	position absolute
	
.contact-li-animate
	animation contact-li-go .5s ease-out
	transform translate(0%, 200%)
	position absolute
	
.whoami
	height 100%
	width 50%
	position absolute
	top 50%
	bottom 0px
	right 0px
	left 0px
	margin auto
	text-align center
	transition all .5s ease-in
	transform scale(1) translate(0%, 0%)
	color $white
	letter-spacing 1px
	
.whoami-scroll
	color $blue4
	position fixed
	right 0px
	left 0px
	top 0%
	margin 0px auto
	animation whoami-scroll .5s ease-out
	transform scale(.5) translate(0%, -49%)

.conditions
	position fixed
	top 10px
	right 10px
	text-align right
	transition all .5s ease-in
	transform scale(1) translate(0%, 0%)
	color $white
	letter-spacing 2px
	
.conditions-scroll
	transform scale(.8) translate(20%, -30%)
	animation conditions-scroll .5s ease-out
	color $blue4