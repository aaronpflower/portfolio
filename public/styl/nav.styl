@keyframes nav-animation-reset
	0%
		transform translate(-50%, 0%)
		opacity 1
	50%
		transform translate(-50%, 95%)
		opacity 0
	100%
		transform translate(0%, 95%)
		opacity 1
		
@keyframes nav-animation-go
	0%
		transform translate(0%, 95%)
		opacity 1
	50%
		transform translate(-50%, 95%)
		opacity 0
	100%
		transform translate(-50%, 0%)
		opacity 1
		
@keyframes about-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(0%, 5%)

@keyframes about-li-reset
	0%
		transform translate(0%, 5%)
	50%
		position absolute
	100%
		transform translate(0%, 0%)
		
@keyframes work-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(-110%, 10%)
		
@keyframes work-li-reset
	0%
		transform translate(-110%, 10%)
	100%
		transform translate(0%, 0%)
		
@keyframes contact-li-go
	0%
		transform translate(0%, 0%)
	100%
		transform translate(-150%, 15%)

@keyframes contact-li-reset
	0%
		transform translate(-150%, 15%)
	100%
		transform translate(0%, 0%)
		
.nav-wrapper
	height 100vh
	width 100vw
	position fixed
	background transparent
	z-index 100

.nav-item-container
	position relative
	display inline-block
	z-index 1
	height 100%
	width 100%
	
.nav-item-wrapper
	display flex
	position relative
	z-index 1
	width 50%
	height 100%
	margin auto
	animation nav-animation-reset 1s ease-out
	transform translate(0%, 95%)
	color $white
	
.nav-scroll
	animation nav-animation-go 1s ease-out
	color $white
	transform translate(-50%, 0%)

.about-li,
.work-li,
.contact-li
	transform translate(0%, 0%)
	flex 1 1 auto
	text-align center

.about-li,
.work-li,
.contact-li
	a
		letter-spacing 2px
	
.about-li
	animation about-li-reset 1s ease-out
	// position static

.work-li
	animation work-li-reset 1 ease-out
	// position static

.contact-li
	animation contact-li-reset 1 ease-out
	// position static

.about-li-animate
	animation about-li-go 1s ease-out
	transform translate(0%, 5%)
	// position absolute
	text-align left
	
.work-li-animate
	animation work-li-go 1 ease-out
	transform translate(-110%, 10%)
	// position absolute
	text-align left
	
.contact-li-animate
	animation contact-li-go 1 ease-out
	transform translate(-150%, 15%)
	// position absolute
	text-align left
