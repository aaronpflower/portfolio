.current-weather-mount
	height 100%
	width 100%
	
.current-weather-component
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	text-align center
	width 100%
	height 100%
	position relative
	
.current-icon
	position absolute
	width 11%
	top 0
	left 0
	right 0
	margin 0px auto
	animation nudge 8s linear infinite
	z-index 2

.current-icon svg
	width 100%
	
.boulder-svg
	height 50%
	width 100%
	z-index 1
	@media $screen-lg
		height 80%

.boulder-svg svg
	width 100%
	height 100%

@keyframes nudge
	0% 
		transform translate(-250%, 0)
		opacity 0
	10%
		opacity 1
	90%
		opacity .9
	100%
		transform: translate(350%, 0)
		opacity 0
		
