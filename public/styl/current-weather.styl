.current-weather-component
	display flex
	flex-flow column nowrap
	justify-content flex-end
	align-items center
	text-align center
	width 100%
	height 100%
	
.current-icon
	position relative
	top 15%
	width 11%
	height 20%

.current-icon svg
	width 100%
	height 100%
	animation pulse 2.5s ease-out infinite alternate
	
.boulder-svg
	display flex
	height 35%
	width 100%
	
.boulder-svg svg
	width 100%
	height 100%

@keyframes pulse
	0% 
		transform scale(1)
	100%
		transform scale(1.2)
		
