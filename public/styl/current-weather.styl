.currently-container
	display flex
	flex-flow column nowrap
	text-align center
	width 100%
	height 100%
	position relative

.current-icon
	position absolute
	width 9%
	top 0
	bottom 0
	left 0
	right 0
	margin 130px auto
	animation nudge 8s linear infinite
	z-index 2

@keyframes nudge
	0% 
		transform translate(-250%, 0)
		opacity 0
	10%
		opacity 1
	90%
		opacity .9
	100%
		transform: translate(350%, 0)
		opacity 0
		
