.current-weather-component
	display flex
	flex-flow column nowrap
	justify-content flex-end
	align-items center
	text-align center
	width 100%
	height 100%
	position relative
	
.current-icon
	position absolute
	width 11%
	top 20%
	left 0
	right 0
	margin 0px auto
	animation pulse 2s ease-out infinite alternate
	// z-index 1

.current-icon svg
	width 100%
	
.boulder-svg
	height 65%
	width 100%
	@media $screen-lg
		height 80%

.boulder-svg svg
	width 100%
	height 100%

@keyframes pulse
	0% 
		transform scale(1)
	100%
		transform scale(1.3)
		
