.currently-container
	display flex
	flex-flow column nowrap
	text-align center
	width 100%
	height 100%
	position relative

.current-icon
	position absolute
	width 9%
	top 0
	bottom 0
	left 0
	right 0
	margin 130px auto
	animation nudge 5s linear infinite alternate

@keyframes nudge
	0%, 100%
		transform translate(0, 0)

	50%
		transform: translate(150px, 0)

	80%
		transform: translate(-150px, 0)
